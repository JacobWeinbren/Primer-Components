---
import { Button } from "primer-components";

const sizes = ["small", "medium", "large"];
const alignments = ["center", "start"];
const states = [null, "disabled", "inactive"];
---

<html data-color-mode="light" data-light-theme="light">
	<head>
		<title>Use Custom Component</title>
	</head>
	<body>
		<div class="grid grid-cols-3 gap-4 p-4">
			{
				alignments.map((align) =>
					states.map((state) =>
						sizes.map((size) => (
							<div class="justify-self-center">
								<Button
									size={size}
									alignContent={align}
									{...(state && { [state]: true })}
								>
									Button
								</Button>
							</div>
						))
					)
				)
			}
		</div>
	</body>
</html>
